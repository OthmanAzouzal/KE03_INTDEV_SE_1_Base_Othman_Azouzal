@page
@model CheckoutModel
<h2>Bestelformulier</h2>
<form method="post">
    <div class="form-group">
        <label>Naam:</label>
        <input asp-for="CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="CustomerEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres:</label>
        <input asp-for="CustomerAddress" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Plaats bestelling</button>
</form>
