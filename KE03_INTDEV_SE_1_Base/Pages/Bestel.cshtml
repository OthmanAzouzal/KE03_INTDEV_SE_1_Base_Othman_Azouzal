@page
@model KE03_INTDEV_SE_1_Base.Pages.BestelModel
@{
    ViewData["Title"] = "Bestelformulier";
}

<h2>Bestelformulier</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Naam</label>
        <input asp-for="Naam" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Adres</label>
        <input asp-for="Adres" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Plaats Bestelling</button>
</form>
