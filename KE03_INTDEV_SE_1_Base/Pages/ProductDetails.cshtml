@page "{id:int}"
@model KE03_INTDEV_SE_1_Base.Pages.ProductDetailsModel
@{
    ViewData["Title"] = Model.Product?.Name ?? "Productdetails";
}

@if (Model.Product == null)
{
    <h2>Product niet gevonden</h2>
}
else
{
    <div class="details-container">
        <div class="details-content">
            <h2>@Model.Product.Name</h2>
            <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" />
            <p class="lead">@Model.Product.Description</p>
            <h4>Prijs: €@Model.Product.Price.ToString("0.00")</h4>

            <form method="post" asp-page-handler="AddToCart">
                <input type="hidden" name="productId" value="@Model.Product.Id" />
                <button type="submit" class="add-to-cart-button">Toevoegen aan winkelwagen</button>
            </form>
        </div>
    </div>
}

