@page "{id:int}"
@model KE03_INTDEV_SE_1_Base.Pages.PartDetailsModel

@{
    ViewData["Title"] = Model.Part?.Name ?? "Onderdeel details";
}

@if (Model.Part == null)
{
    <h2 class="text-center text-danger mt-5">Onderdeel niet gevonden</h2>
}
else
{
    var discountedPrice = Model.Part.Price * (1 - Model.Part.DiscountPercentage / 100m);
    <div class="product-detail-container">
        <h2>@Model.Part.Name</h2>

        <img src="@Model.Part.ImageUrl" alt="@Model.Part.Name" />

        <p class="description">@Model.Part.Description</p>

        <div class="price">
            @if (Model.Part.DiscountPercentage > 0)
            {
                <span class="old-price">€@Model.Part.Price.ToString("0.00")</span>
                <span>€@discountedPrice.ToString("0.00")</span>
            }
            else
            {
                <span>€@Model.Part.Price.ToString("0.00")</span>
            }
        </div>

        <form method="post" asp-page-handler="AddToCart">
            <input type="hidden" name="productId" value="@Model.Part.Id" />
            <button class="btn btn-success mt-3">Toevoegen aan winkelwagen</button>
        </form>
    </div>
}
